{
    "manifest_version": 3,
    "name": "GM Plugin Example",
    "version": "1.0.0",
    "description": "Minimal cross-browser web extension example (popup, background, content script).",
    "icons": {
        "48": "icons/icon-48.svg",
        "128": "icons/icon-128.svg"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "GM Plugin Example"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"],
            "run_at": "document_idle"
        }
    ]
}
